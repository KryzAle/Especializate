@model Organizate.Inscripcion

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header text-center">Inscripciones</h1>
			<h3>Datos del Estudiante</h3>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		if (User.IsInRole("Administrador"))
		{
		<div class="form-horizontal">
			<h4>Inscripcion</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(model => model.ins_fecha, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.ins_fecha, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.ins_fecha, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.ins_total_horas, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.ins_total_horas, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.ins_total_horas, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.ins_est_id, "ins_est_id", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.DropDownList("ins_est_id", null, htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.ins_est_id, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-default" />
				</div>
			</div>
		</div>
		}
		else {
			<h3>Usted No tiene permiso para estar aqui</h3>
		}
	}

	<div>
		@Html.ActionLink("Back to List", "Index")
	</div>
	</div>