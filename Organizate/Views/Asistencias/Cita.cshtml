@model IEnumerable<Organizate.Asistencia>

@{
    ViewBag.Title = "Cita";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Citas</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col col-md-3">
            <a href="@Url.Action("CreateCita","Asistencias")" class="btn btn-success">Agregar Cita</a>
        </div>
    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.asi_fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.asi_hora_inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema.tema_nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante.est_nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.asi_fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.asi_hora_inicio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tema.tema_nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estudiante.nombreCompleto)
            </td>
            <td>
                <a href="@Url.Action("Delete","Asistencias", new { id = item.asi_id })"><i class="fa fa-2x fa-trash"></i></a>
            </td>
        </tr>
        }

    </table>
    </div>