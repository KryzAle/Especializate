@model IEnumerable<Organizate.Profesor>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Profesores</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    @if (User.IsInRole("Administrador"))
    {
    <div class="row">
        <div class="col col-md-3">
            <a href="@Url.Action("Create", "Profesors")" class="btn btn-success">Agregar Profesores</a>
        </div>
    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pro_nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pro_profesion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_profesion)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Profesors", new { id = item.pro_id })"><i class="fa fa-2x fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Profesors", new { id = item.pro_id })"><i class="fa fa-2x fa-trash"></i></a>
                    <a href="@Url.Action("Horario", "Horario_Profesor", new { id = item.pro_id })" class="btn btn-success">Horario</a>
                </td>
            </tr>
        }

    </table>
    }
    else {<h3>Usted No tiene Permisos</h3> }</div>
