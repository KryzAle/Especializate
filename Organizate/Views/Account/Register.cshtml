@model Organizate.Models.RegisterViewModel
@{
	ViewBag.Title = "Registrarse";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	Profesor profesor = new Profesor();
}

<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header text-center">Profesores</h1>
			<h3>Datos del Profesor</h3>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<hr />
	@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<hr />
		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_nombre, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(profesor1 => profesor.pro_nombre, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_apellido, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_apellido, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(profesor1 => profesor.pro_apellido, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_telefono, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_telefono, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(profesor1 => profesor.pro_telefono, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_direccion, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_direccion, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(profesor1 => profesor.pro_direccion, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_cedula, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_cedula, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(profesor1 => profesor.pro_cedula, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(profesor1 => profesor.pro_profesion, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(profesor1 => profesor.pro_profesion, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => profesor.pro_profesion, "", new { @class = "text-danger" })
			</div>
		</div>
		@Html.ValidationSummary("", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			<div>
				<h1 class="col-md-offset-1"><a href="@Url.Action("Index","Profesors")"><i class="fa fa-arrow-circle-left fa-fw"></i></a></h1>
			</div>
			<div class="col-md-offset-3 col-md-1">
				<input type="submit" value="Guardar" class="btn btn-success" />
			</div>
		</div>
		<div class="col-md-offset-1">
			<table class="table" id="tablita">

				<tr>
					<th>Dia</th>
					<th>Hora Inicio</th>
					<th>Hora FIn</th>
				</tr>
				
			</table>
		</div>
	}
	<div class="col-md-offset-1">

		<button id="adicional" name="adicional" type="button" class="btn btn-warning" onclick="appendText()"><i class="fa fa-plus"></i></button>
	</div>
	<br /><br />
	<script>
		var posicion = 0;
		function appendText() {
			var form1 = document.createElement("tr");
			form1.innerHTML = '<td><input type="text" class="form - control" id="dia" name="horario[' + posicion + '].hor_pro_dia"></td>' + '<td><input type="text" class="form - control" id="HoraInicio" name="horario[' + posicion + '].hor_pro_hora_inicio"></td>' + '<td><input type="text" class="form - control" id="HoraFin" name="horario[' + posicion + '].hor_pro_hora_fin"></td>';
			posicion++;
			$("#tablita").append(form1);
		}
	</script>
	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
</div>