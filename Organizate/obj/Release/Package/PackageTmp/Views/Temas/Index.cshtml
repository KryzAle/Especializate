@model IEnumerable<Organizate.Tema>

@{
	ViewBag.Title = "Index";
	var prof = ViewBag.profesor as Organizate.Profesor_Materia;
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Temas</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    @if (User.IsInRole("Administrador"))
    {
    <div class="row h3">
        <div class="col-md-4 col-md-offset-0">
            @prof.Materia.mat_nombre

            <div class="col-md-5">
                <b>Materia</b>
            </div>
        </div>
    </div>
    <div class="row h3">
        <div class="col-md-4 col-md-offset-0">
            @prof.Profesor.nombreCompleto

            <div class="col-md-5">
                <b>Profesor</b>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col col-md-3">
            <a href="@Url.Action("Create", "Temas")" class="btn btn-success">Agregar Temas</a>
        </div>
    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tema_nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tema_nombre)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Temas", new { id = item.tema_id })"><i class="fa fa-2x fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Temas", new { id = item.tema_id })"><i class="fa fa-2x fa-trash"></i></a>

                </td>
            </tr>
        }

    </table>
    <div>
        <h1><a href="@Url.Action("Index", "Profesor_Materia")"><i class="fa fa-arrow-circle-left fa-fw"></i></a></h1>
    </div>
    }
    else {<h3>Usted No tiene Permisos</h3> }
</div>