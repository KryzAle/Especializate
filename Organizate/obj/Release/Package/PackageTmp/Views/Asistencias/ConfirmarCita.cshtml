@model Organizate.Asistencia

@{
    ViewBag.Title = "ConfirmarCita";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">Citas</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (User.IsInRole("Administrador") || User.IsInRole("Secretaria"))
        {
            
	<div class="form-horizontal">
		<h4>Asistencia</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.HiddenFor(model => model.asi_hora_inicio)
			@Html.HiddenFor(model => model.asi_tema_id)

			@Html.LabelFor(model => model.asi_fecha, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.asi_fecha, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.asi_fecha, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			@Html.LabelFor(model => model.asi_est_id, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("asi_est_id", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.asi_est_id, "", new { @class = "text-danger" })
			</div>
		</div>
		
		<div class="form-group">
			<div>
				<h1 class="col-md-offset-1"><a href="@Url.Action("RegistrarCita","Asistencias")"><i class="fa fa-arrow-circle-left fa-fw"></i></a></h1>
			</div>
			<div class="col-md-offset-3 col-md-1">
				<input type="submit" value="Guardar" class="btn btn-success" />
			</div>
		</div>
	</div>
    }
    else
    {
    <h3>Usted No tiene permiso para estar aqui</h3>
    }
    }
    </div>