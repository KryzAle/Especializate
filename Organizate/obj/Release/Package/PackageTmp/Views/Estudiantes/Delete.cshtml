        <div class="col-lg-12">
            <h1 class="page-header">Borrar Estudiante</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    @if (User.IsInRole("Administrador"))
    {
        <h3>¿Está seguro de eliminar esto?</h3>
        <div>
            <h4>Estudiante</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.est_nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_apellido)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_apellido)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_telefono)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_telefono)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_direccion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_direccion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_correo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_correo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_cedula)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_cedula)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.est_cole_univ)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.est_cole_univ)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div>
                        <h1 class="col-md-offset-1"><a href="@Url.Action("Index", "Estudiantes")"><i class="fa fa-arrow-circle-left fa-fw"></i></a></h1>
                    </div>
                    <div class="col-md-offset-3 col-md-1">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </div>
