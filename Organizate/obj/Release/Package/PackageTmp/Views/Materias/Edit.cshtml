@model Organizate.Materia

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Editar Materia</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
        if (User.IsInRole("Administrador"))
        {
		<div class="form-horizontal">
			<h4>Materia</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.mat_id)

			<div class="form-group">
				@Html.LabelFor(model => model.mat_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.mat_nombre, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.mat_nombre, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
        }
        else { <h3>Usted No tiene Permisos</h3>}
    }

	<div>
		@Html.ActionLink("Back to List", "Index")
	</div>
	</div>