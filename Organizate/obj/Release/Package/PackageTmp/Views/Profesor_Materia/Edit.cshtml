@model Organizate.Profesor_Materia

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
	<h2>Edit</h2>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
        if (User.IsInRole("Administrador"))
        {
		<div class="form-horizontal">
			<h4>Profesor_Materia</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.pro_mat_id)

			<div class="form-group">
				@Html.LabelFor(model => model.pro_mat_pro_id, "pro_mat_pro_id", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.DropDownList("pro_mat_pro_id", null, htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.pro_mat_pro_id, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.pro_mat_mat_id, "pro_mat_mat_id", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.DropDownList("pro_mat_mat_id", null, htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.pro_mat_mat_id, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
        }
        else { <h3>Usted No tiene Permisos</h3>}
    }

	<div>
		@Html.ActionLink("Back to List", "Index")
	</div>
	</div>